@model IEnumerable<Bar_rating.Models.Review>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create" style="font-style: italic;">Create New</a>
</p>

<table id="ReviewTable" class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th><span style="font-style: italic;">User Id</span></th>
            <th><span style="font-style: italic;">Bar Id</span></th>
            <th><span style="font-style: italic;">Review Text</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (ViewBag.Id == item.UserId || ViewBag.role == "Admin")
            {
                <tr>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.UserId)</span></td>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.BarId)</span></td>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.ReviewText)</span></td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><span style="font-style: italic;">Edit</span></a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><span style="font-style: italic;">Details</span></a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span style="font-style: italic;">Delete</span></a>
                    </td>
                </tr>
            }
            @if (ViewBag.Id != item.UserId && ViewBag.role == "User")
            {
                <tr>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.UserId)</span></td>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.BarId)</span></td>
                    <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.ReviewText)</span></td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><span style="font-style: italic;">Details</span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
