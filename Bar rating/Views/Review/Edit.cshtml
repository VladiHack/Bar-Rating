@model Bar_rating.Models.Review
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4><span style="font-style: italic;">Review</span></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BarId" class="control-label"></label>
                <input asp-for="BarId" class="form-control" />
                <span asp-validation-for="BarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-route-id="@ViewBag.restaurantId">Back to List</a>
</div>
@if (ViewBag.Message != "")
{
    <div>
        @ViewBag.Message;
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

