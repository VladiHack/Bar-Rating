@model Bar_rating.Models.Review
@{
    ViewData["Title"] = "Edit Review";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Bar Rating</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1506748686214e9df14d8d9e8e6f2f26?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDJ8fGJhcmtpbmcuYWxhfGVufDF8fDE2NTY5NjM4&ixlib=rb-1.2.1&q=80&w=1080');
            background-size: cover;
            background-position: center;
            color: #fff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            padding-top: 5rem;
            margin: 0;
            box-sizing: border-box;
        }

        .navbar {
            background-color: transparent;
            padding: 1rem 2rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            font-size: 1.1rem;
            margin-right: 1.5rem;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        .card {
            background-color: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 2rem;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group input, .form-group textarea {
            border-radius: 5px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .text-muted {
            color: #6c757d !important;
        }

        .alert {
            margin-top: 1rem;
        }

        hr {
            border-top: 2px solid #007bff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="navbar-nav ml-auto">
            @if (ViewBag.role == "Empty")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Create">Create an account</a>
            }
            @if (ViewBag.role == "Admin" || ViewBag.role == "User")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
            }
        </div>
    </nav>

    <div class="container text-center mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="display-4">Edit Review</h1>
                        <h4 class="text-muted"><span style="font-style: italic;">Review</span></h4>
                        <hr />
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="BarId" class="control-label text-muted"><span style="font-style: italic;">Bar ID</span></label>
                                <input asp-for="BarId" class="form-control" />
                                <span asp-validation-for="BarId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ReviewText" class="control-label text-muted"><span style="font-style: italic;">Review Text</span></label>
                                <input asp-for="ReviewText" class="form-control" />
                                <span asp-validation-for="ReviewText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewBag.restaurantId">Back to List</a>
                </div>
                @if (ViewBag.Message != "")
                {
                    <div class="alert alert-success mt-3" role="alert">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
