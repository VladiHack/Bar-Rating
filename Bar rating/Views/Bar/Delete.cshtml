@model Bar_rating.Models.Bar
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3><span style="font-style: italic;">Are you sure you want to delete this?</span></h3>
<div>
    <h4><span style="font-style: italic;">Bar</span></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span style="font-style: italic;">@Html.DisplayNameFor(model => model.Name)</span>
        </dt>
        <dd class="col-sm-10">
            <span style="font-style: italic;">@Html.DisplayFor(model => model.Name)</span>
        </dd>
        <dt class="col-sm-2">
            <span style="font-style: italic;">@Html.DisplayNameFor(model => model.Description)</span>
        </dt>
        <dd class="col-sm-10">
            <span style="font-style: italic;">@Html.DisplayFor(model => model.Description)</span>
        </dd>
        <dt class="col-sm-2">
            <span style="font-style: italic;">@Html.DisplayNameFor(model => model.BarImage)</span>
        </dt>
        <dd class="col-sm-10">
            @if (Model.BarImage != null)
            {
                <!-- Apply CSS styling to the image to make it smaller -->
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.BarImage)" alt="Bar Image" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span style="font-style: italic;">No Image Available</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

