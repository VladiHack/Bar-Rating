<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bar Rating</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://img.freepik.com/premium-vector/bar-counter-with-stools-before-it-alcohol-cocktails-bottles-shelves-vector-illustration_81894-1714.jpg');
            background-size: cover;
            background-position: center;
            color: #fff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        .navbar {
            background-color: transparent;
            padding: 1rem 2rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            font-size: 1.1rem;
            margin-right: 1.5rem;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        .hero {
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                margin-bottom: 1rem;
                text-transform: uppercase;
                letter-spacing: 2px;
            }

            .hero p {
                font-size: 1.5rem;
                margin-bottom: 2rem;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            margin-bottom: 1rem;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .statistics {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            font-size: 1.2rem;
            color: #333;
            text-shadow: none;
            margin-top: 2rem;
        }

            .statistics p {
                margin-bottom: 0.5rem;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="navbar-nav ml-auto">
            @if (ViewBag.role == "Empty")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Create">Create an account</a>
            }
            @if (ViewBag.role == "Admin" || ViewBag.role == "User")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
            }
        </div>
    </nav>

    <div class="hero">
        <div class="container text-center">
            <h1>Welcome to Bar Rating</h1>
            <p>Discover the best bars in town and share your experiences.</p>
            @if (ViewBag.role == "Empty")
            {
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="User" asp-action="Create">Create an account</a>
            }
            @if (ViewBag.role == "Admin")
            {
                <div class="statistics mx-auto">
                    <p class="lead">Statistics:</p>
                    <p class="text-muted">Users: @ViewBag.UserCount</p>
                    <p class="text-muted">Bars: @ViewBag.BarCount</p>
                    <p class="text-muted">Reviews: @ViewBag.ReviewCount</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
