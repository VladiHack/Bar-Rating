<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bar Rating</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 1rem 2rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
        }

        .navbar-nav .nav-link {
            color: #fff;
            font-size: 1.1rem;
            margin-right: 1.5rem;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        .hero {
            background-image: url('https://img.freepik.com/premium-vector/bar-counter-with-stools-before-it-alcohol-cocktails-bottles-shelves-vector-illustration_81894-1714.jpg');
            background-size: cover;
            background-position: center;
            height: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                margin-bottom: 1rem;
            }

            .hero p {
                font-size: 1.5rem;
                margin-bottom: 2rem;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .statistics {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 1.2rem;
        }

            .statistics p {
                margin-bottom: 0.5rem;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">Bar Rating</a>
        <div class="navbar-nav ml-auto">
            @if (ViewBag.role == "Empty")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Create">Create an account</a>
            }
            @if (ViewBag.role == "Admin" || ViewBag.role == "User")
            {
                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
            }
        </div>
    </nav>

    <div class="hero">
        <div class="container text-center">
            <h1>Welcome to Bar Rating</h1>
            <p>Discover the best bars in town and share your experiences.</p>
            @if (ViewBag.role == "Empty")
            {
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="User" asp-action="Create">Create an account</a>
            }
        </div>
    </div>

    @if (ViewBag.role == "Admin")
    {
        <div class="statistics">
            <p class="lead">Statistics:</p>
            <p class="text-muted">Users: @ViewBag.UserCount</p>
            <p class="text-muted">Bars: @ViewBag.BarCount</p>
            <p class="text-muted">Reviews: @ViewBag.ReviewCount</p>
        </div>
    }
</body>
</html>