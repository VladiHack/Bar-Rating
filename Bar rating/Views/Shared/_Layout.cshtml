<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bar Review</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs4-4.6.0/dt-1.10.21/datatables.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
            margin: 0; /* Remove any default margin */
        }

        .navbar {
            background-color: #343a40; /* Dark background color for the navbar */
            border-bottom: none; /* Remove the border at the bottom */
            padding: 0.5rem 1rem; /* Adjust padding to make the navbar smaller */
        }

        .navbar-brand {
            color: #fff !important; /* White color for the navbar brand */
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #fff !important; /* White color for the navbar links */
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important; /* Blue color for hover state */
            }

        .container {
            max-width: 1200px;
        }

        footer {
            background-color: #343a40; /* Dark background color for the footer */
            color: #fff;
            text-align: center;
            padding: 1rem;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Fix for the white line issue */
        .container {
            padding-top: 0; /* Remove top padding to align content properly */
        }

        .navbar + .container {
            padding-top: 0; /* Remove any extra space below the navbar */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bar Rating</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (ViewBag.role == "User" || ViewBag.role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        @if (ViewBag.role == "User")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Bar" asp-action="Index">Bars</a>
                            </li>
                        }
                        @if (ViewBag.role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Bar" asp-action="Index">Bars</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <!-- Any additional links or content here -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs4-4.6.0/dt-1.10.21/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
